{% extends 'main_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="lg-form-container">
    <div class="row">
        <div class="col-3">
            <h1>Waterflow Manager</h1>
        </div>
        <div class="col">
            <div class="row">
                <h1><b>Add New User Form</b></h1>
                <br>
                <fieldset>
                    <form id="add_user" action="" method="{{ method }}">
                        <p id="name_error">Name cannot have numbers and cannot be blank</p>
                        <label for="first_name">User First Name: <input type="text" id="first_name" name="first_name" maxlength="20" autofocus required></label>
                        <br><br>
                        <label for="last_name">User Last Name: <input type="text" id="last_name" name="last_name" maxlength="20" autofocus required></label>
                        <br><br>
                        <label for="username">User's username: <input type="text" id="username" name="username" maxlength="20" required></label>
                        <br><br>
                        <label for="password">User's password: <input type="password" id="password" name="password" maxlength="20" required></label>
                        <br><br>
                        <p id="clearance_error">Clearance level must be between 1 and 5</p>
                        <label for="clearance">User's clearance level: <input type="text" id="clearance" name="clearance" maxlength="1" required></label>
                        <br><br>
                        <button type="submit" id="confirmed">Submit</button>
                        <button type="button" id="reset">Reset values</button>
                        <button id="cancel_user_add" formaction="{{ action }}" formmethod="{{ method }}" formnovalidate>Cancel</button>
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
</div>
{% endblock %}