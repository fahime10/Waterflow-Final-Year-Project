{% extends 'main_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="lg-form-container">
    <div class="row">
        <div class="col-3">
            <h1>Waterflow Manager</h1>
        </div>
        <div class="col">
            <div class="row">
                <h1>Start New Project</h1>
                <fieldset>
                    <form id="start_project" action="{{ action }}" method="{{ method }}">
                    <label for="project_name">Project Name: <input type="text" id="project_name" name="project_name" maxlength="20" autofocus required></label>
                        <br><br>
                        {{ options | raw }}
                        <br><br>
                        <label for="due_date">Due Date: <input type="date" id="due_date" name="due_date"></label>
                        <br><br>
                        <button type="submit">Submit</button>
                        <button type="reset">Reset values</button>
                    </form>
                </fieldset>
                <form id="cancel" action="" method="{{ method }}">
                    <button id="cancel_project">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}