{% extends 'main_layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="lg-form-container">
        <div class="row">
            <div class="col-3">
                <h1>Waterflow Manager</h1>
            </div>
            <div class="col-6">
                <div class="row">
                    <h1>Delete Project</h1>
                    <table id="project_to_delete">
                        <tr>
                            <th>Project ID</th>
                            <th>Project Name</th>
                            <th>Project Manager</th>
                            <th>Stakeholder</th>
                            <th>Due Date</th>
                        </tr>
                    </table>
                    <form action="{{ action }}" method="{{ method }}">
                        <p id="center">Are you sure you want to delete this record?</p>
                        <label for="project_id" style="margin-left: 400px; font-size: 20px;">Project id: <input value="" id="project_id" name="project_id" readonly></label>
                        <p id="center">The project and all tasks associated with it will be removed permanently</p>
                        <button type="submit">Yes, I want to delete the project</button>
                        <button id="cancel_delete" type="submit">No, I want to keep the project</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}